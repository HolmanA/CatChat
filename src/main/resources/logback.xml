<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- data Package -->
    <logger name="catchat.data" level="null"/>

        <!-- authentication Package -->
        <logger name="catchat.data.authentication" level="null"/>
        <logger name="catchat.data.authentication.GroupMeOAuthService" level="null"/>

        <!-- receiver Package -->
        <logger name="catchat.data.receiver" level="null"/>
        <logger name="catchat.data.receiver.message" level="null"/>
        <logger name="catchat.data.receiver.message.MessageReceiver" level="null"/>
        <logger name="catchat.data.receiver.message.MessageSocketListener" level="null"/>
        <logger name="catchat.data.receiver.message.NotificationMessage" level="null"/> <!-- TODO -->

        <!-- source Package -->
        <logger name="catchat.data.source" level="null"/>
        <logger name="catchat.data.source.ApiInvoker" level="null"/> <!-- TODO -->
        <logger name="catchat.data.source.entities" level="null"/> <!-- TODO -->
        <logger name="catchat.data.source.groupme" level="null"/>
        <logger name="catchat.data.source.groupme.BaseGroupMeApiCommand" level="null"/>

    <!-- model Package -->
    <logger name="catchat.model" level="null"/>
    <logger name="catchat.model.Model" level="null"/>

        <!-- chat Package -->
        <logger name="catchat.model.chat" level="null"/>

        <!-- chatlist Package -->
        <logger name="catchat.model.chatlist" level="null"/> <!-- TODO -->

        <!-- userprofile Package -->
        <logger name="catchat.model.userprofile" level="null"/> <!-- TODO -->

    <!-- UI Package -->
    <logger name="catchat.ui" level="off"/> <!-- TODO -->
    <logger name="catchat.ui.ApplicationStage" level="null"/> <!-- TODO -->

        <!-- authentication Package -->
        <logger name="catchat.ui.authentication" level="null"/> <!-- TODO -->
        <logger name="catchat.ui.authentication.AuthPresenter" level="null"/> <!-- TODO -->
        <logger name="catchat.ui.authentication.AuthView" level="null"/> <!-- TODO -->

        <!-- chats Package -->
        <logger name="catchat.ui.chats" level="null"/>
        <logger name="catchat.ui.chats.ChatsPresenter" level="null"/>
        <logger name="catchat.ui.chats.view" level="null"/>

        <!-- error Package -->
        <logger name="catchat.ui.messages" level="null"/> <!-- TODO -->

        <!-- messages Package -->
        <logger name="catchat.ui.messages" level="null"/> <!-- TODO -->
        <logger name="catchat.ui.messages.MessagesPresenter" level="null"/> <!-- TODO -->
        <logger name="catchat.ui.messages.view" level="null"/> <!-- TODO -->

        <!-- system Package -->
        <logger name="catchat.ui.system" level="null"/> <!-- TODO -->

    <!-- Dependencies -->
    <logger name="org.eclipse.jetty" level="OFF"/>
</configuration>
