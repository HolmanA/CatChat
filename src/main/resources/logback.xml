<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
        ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="catchat.data.authentication.GroupMeOAuthService" level="null"/>
    <logger name="catchat.data.source.groupme" level="off"/>
    <logger name="catchat.data.source.groupme.BaseGroupMeApiCommand" level="null"/>
    <logger name="catchat.data.receiver.message" level="null"/>
    <logger name="catchat.data.model" level="off"/>

    <!--<logger name="org.eclipse.jetty" level="INFO"/>-->
</configuration>
